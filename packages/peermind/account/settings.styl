@import '../base/base'

button.facebook-button
  background #3b5998
  color #fff

  &:hover
    background #2c4780

button.google-button
  background #db5a3c
  color #fff

  &:hover
    background #ca4c2e

button.twitter-button
  background #4099ff
  color #fff

  &:hover
    background #3288eb

.collection .collection-item.avatar .secondary-content.btn
  top (($collection-item-avatar-min-height - 36px) / 2)

.btn.selected
  color $secondary-color !important

  &:hover
    color $secondary-color !important

.justify
  text-align justify
  hyphens auto

.delegation-control
  display flex
  align-items center

  .range
    width 150px
    margin-right 30px

.delegations-users
  overflow-y auto
  max-height 300px
  // To show the shadow from collection-items.
  // As a consequence also scrollbar does not overlap the content.
  margin 0 -10px
  padding 0 10px

  .collection
    // If margin is to tall computation if we reached the end of scrolling
    // does not work anymore. But we need a bit of margin to show the shadow.
    margin 0.25rem 0

.notifications
  thead
    border-bottom none

  label
    padding-left 20px
    height 20px
    line-height 20px

.following
.notifications
  .type
    font-weight bold
    color $off-black
