@import '../base/base'

/*
We want to allow users to click on range labels and move the value.
*/

.vote-label
  cursor pointer
  user-select none

/*
Other style.
*/

.row-top
  margin-left auto
  margin-right auto
  margin-top 20px

.row-top:after
  content ""
  display table
  clear both

/*
Slider.
*/

.vote-range-slider
  height: 60px

// TODO: There is also $radio-empty-color (#5a5a5a). See variables.styl for other possible variables, or define your own.

.range
  width 80%
  height 3px
  border 0
  border-radius 100px
  background rgba(#000,.2)
  outline none
  .ui-slider-handle
    position absolute
    margin -6px 0 0 -17px
    border-radius 100px
    background $radio-fill-color
    color #fff
    border $radio-border
    height 20px
    line-height 16px
    text-align center
    width 34px
    outline none
    cursor pointer
    font-size 8px
    font-weight 800
    text-decoration none
    transition transform .1s ease
    &:hover
    &:focus
      transform scale(1.2)
  .ui-slider-range
    background transparent

.cntr
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

.deselected
  .ui-slider-handle
    background #fff
    border 2px solid black

.steps
	border 1px solid transparent
	width 800px
	position relative
	height 30px

.ui-slider-tick
  position absolute
  width 3px
  height 3px
  border-radius 3px
  z-index 0
  background #505050

.oppose-vote, .support-vote
  display block
  width 100px

.support-vote
  text-align right

.neutral-vote
  width auto
