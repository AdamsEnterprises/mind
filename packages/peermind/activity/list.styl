@import '../base/base'

.vertical-middle
  vertical-align middle

.activity-timestamp
  color: $grey.base

.finished-loading
  text-align center
  color $secondary-color

.loading-wrapper
  // To make the wrapper an offset parent which allows us to position
  // progress bar and finished loading message relativelly to it.
  position relative

.finished-loading
.loading
  position absolute
  left 0
  right 0
