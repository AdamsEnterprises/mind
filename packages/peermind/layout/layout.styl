@import '../base/base'

.root
  display flex
  min-height 100vh
  flex-direction column

.tabs .indicator
  &.moving-right
    transition left 0.3s ease-out 0.09s, right 0.3s ease-out

  &.moving-left
    transition left 0.3s ease-out, right 0.3s ease-out 0.09s

main
  flex 1 0 auto

body
  background-color $body-bg-color