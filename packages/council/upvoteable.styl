@import 'nib'

.upvoteable
  user-select none
  // TODO: Use $button-color-disabled here.
  color #9f9f9f

  .material-icons
    position relative
    top 2px
    margin-left 10px
    margin-right 5px

  &.upvote
  &.remove-upvote
    cursor pointer
    // TODO: Use $secondary-color here.
    color #26a69a

  &.upvote .material-icons
    // TODO: Use $teal.lighten-4 here.
    color #b2dfdb

  &.upvote:hover .material-icons
    // TODO: Use $secondary-color here.
    color #26a69a

  &.remove-upvote .material-icons
    // TODO: Use $secondary-color here.
    color #26a69a

.collection .collection-item.avatar .secondary-content.upvoteable
  position initial
