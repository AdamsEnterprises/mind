@import '../base/base'

.upvoteable
  user-select none
  color $button-disabled-color

  .material-icons
    position relative
    top 2px
    margin-left 10px
    margin-right 5px

  &.upvote
  &.remove-upvote
    cursor pointer
    color $secondary-color

  &.upvote .material-icons
    color $secondary-color-light

  &.upvote:hover .material-icons
    color $secondary-color

  &.remove-upvote .material-icons
    color $secondary-color

.collection .collection-item.avatar .secondary-content.upvoteable
  position initial
