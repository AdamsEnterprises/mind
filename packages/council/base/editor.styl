@import '../base/base'

.drop-file-hint
  color $input-border-color

  .select-file
    display none

/* Restoring default style because Materialize overrides it. */
.trix-content
  strong
    font-weight bold

  li
    list-style-type inherit

  ul
    list-style-type disc

  ol ul, ul ul
    list-style-type circle

  ol ol ul, ol ul ul, ul ol ul, ul ul ul
    list-style-type square

/* Making sure displayed CSS matches the one in the editor. */
.trix-content
  img
    max-width 100%
    height auto
