@import 'nib'

.card .card-action.sign-in-action a
  margin-right 0

.ct-series
  .ct-line
    // TODO: Use $secondary-color here.
    stroke #26a69a
    stroke-width 1px

  .ct-point
    // TODO: Use $secondary-color here.
    stroke #26a69a
    stroke-width 3px

.ct-grids
  .ct-crosshair
    // TODO: Use $materialize-red.lighten-4 here.
    stroke #f8c1c3
    stroke-width 1px

.result
  &.passed
    // TODO: Use $success-color here.
    color #4CAF50

  &.failed
    // TODO: Use $error-color here.
    color #F44336

.tally-stats
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-between

  .stats-item
    white-space nowrap
