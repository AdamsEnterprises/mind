@import '../base/base'

.card .card-action.sign-in-action a
  margin-right 0 !important

.ct-series
  .ct-line
    stroke $secondary-color
    stroke-width 1px

  .ct-point
    stroke $secondary-color
    stroke-width 3px

.ct-grids
  .ct-crosshair
    stroke $primary-color-light
    stroke-width 1px

.result
  &.passed
    color $success-color

  &.failed
    color $error-color

.tally-stats
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-between
  margin-left -0.25rem
  margin-right -0.25rem

  .stats-item
    white-space nowrap
    padding 0 0.25rem

.tally-message
  padding-bottom 20px
