@import '../base/base'

nav ul .account img
  float right
  margin-left 8px
  margin-top 12px
  height 32px
  width 32px
  border-radius 50%

nav ul .static
  font-size 1rem
  color $navbar-font-color
  display block
  padding 0 15px

@media $medium-and-up
  nav ul .account img
    margin-top 16px

nav .side-nav
  li.signed-in-menu-item
    background-color $secondary-color

  .static
    color $sidenav-font-color-no-action
    display block
    font-size 1rem
    height 64px
    line-height 64px
    padding 0 $sidenav-padding
